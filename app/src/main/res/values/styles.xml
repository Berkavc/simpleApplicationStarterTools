<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultTextView">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>

    <style name="defaultTextViewRecyclerView">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/bg_default_label</item>
    </style>

    <style name="defaultEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_default_label</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/figma_ghosted</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="defaultTextViewTitle" parent="defaultTextView">
      <item name="android:textSize">32sp</item>
    </style>

    <style name="defaultTextViewDescription" parent="defaultTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/font_family_condensed</item>
    </style>

    <!-- Error Dialog -->
    <style name="ErrorDialogButton" parent="defaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_red_label</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Login Page -->
    <style name="passwordFieldLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="android:background">@drawable/bg_default_label</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
    </style>

    <style name="passwordField" parent="defaultTextView">
        <item name="android:background">@drawable/bg_default_label</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="PasswordToggleTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">#0000</item>
    </style>

    <style name="SignUpButton" parent="defaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_orange_label</item>
    </style>

    <style name="LoginButton" parent="defaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_blue_label</item>
    </style>

    <!-- SignUp Page -->
    <style name="signUpErrorTexts" parent="defaultTextView">
        <item name="android:textColor">@color/md_red_400</item>
    </style>

    <!-- ForgotPassword Page -->
    <style name="ForgotPasswordButton" parent="defaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_black_label</item>
    </style>

    <!-- Verification Page -->
    <style name="VerificationButton" parent="defaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_grey_label</item>
        <item name="android:clickable">false</item>
    </style>

</resources>