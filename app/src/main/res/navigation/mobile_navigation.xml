<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.marketRecognizerApp.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_from_login_to_sign_up"
            app:destination="@id/signUpFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>

        <action
            android:id="@+id/action_from_login_to_forgot_password"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>

        <action
            android:id="@+id/action_from_login_to_biometric_authentication"
            app:destination="@id/biometricAuthenticationFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.marketRecognizerApp.ui.signup.SignUpFragment"
        android:label="sign_up_fragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_from_sign_up_to_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.marketRecognizerApp.ui.forgotpassword.ForgotPasswordFragment"
        android:label="forgot_password_fragment"
        tools:layout="@layout/fragment_forgot_password">

        <action
            android:id="@+id/action_from_forgot_password_to_verification"
            app:destination="@id/verificationFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <argument
            android:name="email"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.example.marketRecognizerApp.ui.verification.VerificationFragment"
        android:label="verification_fragment"
        tools:layout="@layout/fragment_verification">

        <action
            android:id="@+id/action_from_verification_to_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>

        <argument
            android:name="email"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/biometricAuthenticationFragment"
        android:name="com.example.marketRecognizerApp.ui.biometricauthentication.BiometricAuthenticationFragment"
        android:label="biometric_authentication_fragment"
        tools:layout="@layout/fragment_biometric_authentication">
    </fragment>
</navigation>